<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cars_management.Controller.Auth.SettingsController" spacing="12" stylesheets="@../Style/settings.css" styleClass="settings-root">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
    <Label text="ParamÃ¨tres du compte" styleClass="title" />

    <GridPane hgap="10" vgap="10" styleClass="form-container">
        <columnConstraints>
            <ColumnConstraints minWidth="120" />
            <ColumnConstraints minWidth="240" />
        </columnConstraints>

        <Label text="Utilisateur actuel:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="label" />
        <TextField fx:id="tfCurrentUsername" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="text-field" />

        <Label text="Nouveau nom d'utilisateur:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="label" />
        <TextField fx:id="tfNewUsername" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="text-field" />

        <Label text="Nouveau mot de passe:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="label" />
        <PasswordField fx:id="pfNewPassword" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="password-field" />

        <Label text="Confirmer mot de passe:" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="label" />
        <PasswordField fx:id="pfConfirmPassword" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="password-field" />
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Annuler" onAction="#handleCancel" styleClass="button secondary" />
        <Button text="Enregistrer" onAction="#handleSave" styleClass="button" />
    </HBox>

    <Label fx:id="lblStatus" styleClass="status-label" />
</VBox>
