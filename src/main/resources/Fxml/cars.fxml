<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox spacing="15"
      xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cars_management.Controller.Cars.CarsController"
      stylesheets="@../Style/cars.css"
      styleClass="root-container">

    <padding>
        <Insets top="20" right="25" bottom="20" left="25"/>
    </padding>

    <!-- HEADER -->
    <Label text="Car Management" styleClass="title"/>

    <!-- FORM CONTAINER -->
    <VBox spacing="10" styleClass="form-container">

        <GridPane hgap="15" vgap="15" styleClass="grid">

            <columnConstraints>
                <ColumnConstraints prefWidth="100"/>
                <ColumnConstraints prefWidth="200"/>
                <ColumnConstraints prefWidth="100"/>
                <ColumnConstraints prefWidth="200"/>
            </columnConstraints>

            <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="tfId" promptText="Enter ID" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Matricule:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
            <TextField fx:id="tfMatricule" promptText="Enter Matricule" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

            <Label text="Marque:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="tfMarque" promptText="Enter Brand" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Modele:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
            <TextField fx:id="tfModele" promptText="Enter Model" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

            <Label text="Annee:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="tfAnnee" promptText="Year" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Prix:" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
            <TextField fx:id="tfPrix" promptText="Price per day" GridPane.rowIndex="2" GridPane.columnIndex="3"/>

        </GridPane>

        <!-- BUTTONS -->
        <HBox spacing="12" styleClass="actions-box">
            <Button text="Add" onAction="#addCar" styleClass="btn-add"/>
            <Button text="Update" onAction="#updateCar" styleClass="btn-update"/>
            <Button text="Delete" onAction="#deleteCar" styleClass="btn-delete"/>
            <Button text="Retour" onAction="#handleRetoure" styleClass="btn-back"/>
        </HBox>

    </VBox>

    <!-- TABLE -->
    <TableView fx:id="tableCars" VBox.vgrow="ALWAYS" styleClass="cars-table">

        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
            <TableColumn fx:id="colMatricule" text="Matricule" prefWidth="140"/>
            <TableColumn fx:id="colMarque" text="Marque" prefWidth="130"/>
            <TableColumn fx:id="colModele" text="Modele" prefWidth="130"/>
            <TableColumn fx:id="colAnnee" text="Annee" prefWidth="80"/>
            <TableColumn fx:id="colPrix" text="Prix" prefWidth="100"/>
        </columns>

    </TableView>

</VBox>